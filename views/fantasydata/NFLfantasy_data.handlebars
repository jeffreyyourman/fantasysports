  <div class="container-fluid NBATeamTable">
    <br>
    <br>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Table Legend</button>
    <br>
    <br>
    <input type="text" id="mySearchInputNFL" onkeyup="mySearchFunctionNFL()" placeholder="Search for NFL Players" title="Type in a name">
    <br>
    <br>
    <p style='font-size:30px;'>Click a Position to get started</p>
    <br>
      <select id='mySelectedInputNFL' name='changePosition' onchange='myPositionFunctionNFL()'>
        <option value="" disabled selected>Filter by position</option>
        <option value="QB">QB</option>
        <option value="RB">RB</option>
        <option value="WR">WR</option>
        <option value="TE">TE</option>
        <option value="K">K</option>
        <option value="Def">Def</option>
      </select>
  </div>
  <div id='playerlist' class="container-fluid NBAtables">
    <div class="row nbafantasy">
      <div class="col-md-12" id="nba">
        <div class="panel-body beforeResponsive">
          <div class="table-responsive">
            <table style='bborder-color: black;' id='myTableNFL' class="table table-bordered tableNbaFantasy">
              <thead>
                <tr style='font-size: 12px;cursor: pointer;'>
                  <th>Player</th>
                  <th></th>
                  <th>Salary</th>
                  <th>Position</th>
                  <th>Team</th>
                  <th>Opponent</th>
                  <th>Injury_Status</th>
                  <th>RankingsVsPosition</th>
                  <th>TotalOpportunities</th>
                  <th>PlayersOffenseVsPosition</th>
                  <th>WinChanceVsOpponent%</th>
                  <th>Over/Under</th>
                  <th>CriteriaScore</th>
                  <th>CriteriaRanking</th>
                  <th>PointsPerAttempt</th>
                  <th>SnapCount</th>
                  <th>SalaryChange</th>
                  <th>RecentPerformance</th>
                  <th>Ownership</th>
                </tr>
              </thead>
              <tbody>
              {{#each fantasyNFL}}
              <tr>
                <td>{{Player}}</td>
                <td></td>
                <td>{{Sal}}</td>
                <td>{{POS}}</td>
                <td>{{Team}}</td>
                <td>{{Opp}}</td>
                <td>{{Injury_Status}}</td>
                <td>{{RvP}}</td>
                <td>{{TotalOpp}}</td>
                <td>{{TeamValueVsPos}}</td>
                <td>{{WinVsOpp}}</td>
                <td>{{OU}}</td>
                <td>{{CriteriaScore}}</td>
                <td>{{CritRank}}</td>
                <td>{{PPA}}</td>
                <td>{{Snap_Count}}</td>
                <td>{{Sal_Change}}</td>
                <td>{{RecPre}}</td>
                <td>{{Ownership}}</td>
              </tr>
              {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="suggestedbuttondiv">
      <div class="suggesteddiv">
          <button style='text-align:center;' type="button" class="btn btn-default suggestedbutton">My Suggested NFL Players</button>
      </div>
  </div>
