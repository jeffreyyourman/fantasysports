<head>
  <script src="https://cdn.firebase.com/js/client/2.4.1/firebase.js"></script>
</head>
<form action="https://api.formbucket.com/f/buk_EhELZJUqzi0LzN9pZt058QvZ" method="post" target="_blank" class="col-md-12 well">
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control validate" name="name" placeholder="Enter Name" required="" aria-required="true">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control validate" name="email" placeholder="Enter email" required="" aria-required="true">
      </div>
      <div class="form-group">
        <label for="subject">Subject</label>
        <select class="form-control" name="subject" required="" aria-required="true">
        <option value="" disabled selected>Choose One:</option>
        <option value="questions">Questions</option>
        <option value="suggestions">Suggestions</option>
        <option value="comments">Comments, Good or bad!</option>
        </select>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="message">Message</label>
        <textarea required="" aria-required="true" class="form-control validate" name="message" rows="11" placeholder="Enter Message"></textarea>
      </div>
      <div class="form-group">
        <button style='background-color:#021A3A' class="btn btn-primary pull-right" type="submit">Send</button>
      </div>
    </div>
  </div>
</form>

<div class="chatdivshow">
    <div id="sizer">
        <a class='closechat' href="#">x</a>
    </div>
    <div id="chatmessages"><br></div>
    <br>
    {{#if requser}}
    <div id="chatbar">
        <input placeholder="Start Typing" id="chatinput" />
        <button id='chatsend' type="button" class="btn btn-default btn-sm">Send</button>
    </div>
    {{/if}}

    {{#unless requser}}
    <div id="chatbar">
        <p><a style='color:yellow; font-size:18px;' href="/login/facebook">Click here to Sign in and use the chat</a></p>
    </div>
    {{/unless}}
    <!-- <div id="swapzone"><input id="username" placeholder="Name"/>
        <button id='start' type="button" class="btn btn-default">Enter Chat</button>
    </div> -->
</div>
<script src='/assets/javascript/chatapp.js'></script>
